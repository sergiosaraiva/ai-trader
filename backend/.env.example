# AI Assets Trader Environment Configuration

# Application
DEBUG=false
LOG_LEVEL=INFO

# Scheduler Mode
# Set to "true" for always-on deployment (APScheduler runs background jobs)
# Set to "false" for serverless/cron deployment (use /api/v1/cron/tick endpoint)
SCHEDULER_ENABLED=true

# Cron API Key (optional - secures cron endpoints when SCHEDULER_ENABLED=false)
# If set, cron endpoints require X-Cron-Key header
CRON_API_KEY=

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_trader
REDIS_URL=redis://localhost:6379/0

# MetaTrader 5 (Windows only)
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=

# Alpaca Markets
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# FRED API (Federal Reserve Economic Data - for sentiment)
# Get your free key at: https://fredaccount.stlouisfed.org/apikeys
FRED_API_KEY=

# MLflow
MLFLOW_TRACKING_URI=mlruns
MLFLOW_EXPERIMENT_NAME=ai-trader

# Trading Configuration
DEFAULT_SYMBOL=EURUSD
DEFAULT_TIMEFRAME=1H
MAX_POSITION_SIZE=0.02
MAX_DAILY_LOSS=0.05
