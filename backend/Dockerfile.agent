# CPU-Only Agent Container Dockerfile
# Autonomous trading agent that monitors predictions and executes trades
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
# gcc/g++ needed for some Python packages (e.g., pandas)
# Combine commands to reduce layers and clean up in same layer
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        gcc \
        g++ \
        curl \
        postgresql-client \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Upgrade pip and install wheel
RUN pip install --no-cache-dir --upgrade pip setuptools wheel

# Install core scientific packages first (large downloads)
RUN pip install --no-cache-dir --default-timeout=600 numpy "pandas>=2.0.0,<4.0.0" "scipy>=1.10.0,<2.0.0"
RUN pip install --no-cache-dir --default-timeout=600 "pyarrow>=14.0.0,<25.0.0"
RUN pip install --no-cache-dir --default-timeout=600 "scikit-learn>=1.3.0,<2.0.0"

# Install XGBoost (includes CUDA libs but will use CPU if no GPU present)
# Split into smaller retries to handle network timeouts
RUN pip install --no-cache-dir --default-timeout=900 --retries=10 "xgboost>=2.0.0,<3.0.0"

# Install remaining packages
COPY requirements-docker.txt .
RUN pip install --no-cache-dir --default-timeout=300 -r requirements-docker.txt

# Copy static data first (changes less frequently)
COPY models/ ./models/
COPY data/forex/ ./data/forex/
COPY data/sentiment/ ./data/sentiment/

# Copy configuration
COPY configs/ ./configs/

# Copy application source last (changes most frequently)
COPY scripts/ ./scripts/
COPY src/ ./src/

# Copy and prepare agent entrypoint
COPY docker-entrypoint-agent.sh /docker-entrypoint-agent.sh
RUN chmod +x /docker-entrypoint-agent.sh

# Create necessary directories
RUN mkdir -p /app/logs /app/data/db

# Create non-root user for running the application
RUN groupadd -r aitrader && useradd -r -g aitrader aitrader

# Set correct permissions
RUN chown -R aitrader:aitrader /app && \
    chown aitrader:aitrader /docker-entrypoint-agent.sh

# Switch to non-root user
USER aitrader

# Set environment variables
ENV PYTHONPATH=/app
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Health check port
EXPOSE 8002

# Run agent entrypoint
ENTRYPOINT ["/docker-entrypoint-agent.sh"]
